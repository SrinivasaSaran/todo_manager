<article>

    <h1 class="todopage-title">My Todo List</h1>

    <%= form_with(class: "todoinput-bar", url: "/todos", method: "POST") do %>
      <input class="todoinput-text" type="text" placeholder="What's Next?" name="todo_text" />
      <input class="todoinput-text" type="date" name="due_date"/>
      <input class="todoinput-button" type="submit" value="Add" />
    <%end%>

    <%= render partial: "todo-section", locals: {
      section_title: "Overdue",
      todos: Todo.overdue.not_completed,
      display_date: true,
      display_due_text_only: true
   }%>
   <%= render partial: "todo-section", locals: {
      section_title: "Due Today",
      todos: Todo.due_today,
      display_date: false,
      display_due_text_only: false
   }%>
   <%= render partial: "todo-section", locals: {
      section_title: "Due Later",
      todos: Todo.due_later,
      display_date: true,
      display_due_text_only: false
   }%>

</article>
